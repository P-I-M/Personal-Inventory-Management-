<div class="grid-container">
  <div class="product-display">
    <img src="/images/banana.jpg">
  </div>
  <div class="product-nav">
      <button class="my-inventory">My Inventory</button>
      <button class="add-item"><a href="/dashboard/new">Add Item</button></a>
      <button class="suggetions">Daily Suggestions</button>
