  
    <div class="card">
      <h3 class="card-header">Sign up for an account</h3>
      <form id="signup-form" class="card-body">
        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" type="text" class="form-input" />


        <label class="form-label" for="password-signup">Password</label>
        <input  id="password-signup" type="password" class="form-input" />
        
        <!-- upload image -->
      
          <div class ="signup-photo">
          <form method="post" enctype="multipart/form-data">
          <input type="file" id="profile-signup" name="files[]" multiple>
        </div>
    
        <button type="submit" class="btn">Create Account</button>
      </form>
    </div>
