{{#if products.length}}

  <h2 class="center">Select Item to Remove</h2>
 
    {{#each products as |product| }}
  
        <div class="cat-list center">
            <input type="checkbox" id="{{product.id}}" name="{{product.product_name}}" value="{{product.id}}">
           <button> <label for="{{product.id}}">{{product.cat_name}} - {{product.product_name}}</button></label><br>
        </div>

    {{/each}}
   
<br />
   <div class="delete-prod-btn">
        <button type="button" class="categorybtn delete-prod-btn">Remove</button>
    </div>



{{else}}
<h6>You do not have any products in your inventory.</h6>
{{/if}}

