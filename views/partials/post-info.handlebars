<article class="post">
    <div class="title">
      <a href="/post/{{id}}">{{title}}</a>  
    </div>
    <div class="post-test">
        <p>{{text}}</p>
    </div>
    <div class="meta">
      posted by {{user.username}} on {{format_date created at}}
      |
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>  
    </div>
</article>