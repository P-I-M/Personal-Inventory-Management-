<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <div>
        <label for="product-title" class="form-label">Product</label>
        <input name="product-title" type="text" value="{{product.product_name}}" class="form-input" />
        </div>
        <div>
        <label for="prod-desc" class="form-label" >Description</label>
        <input name="prod-desc" type="text" value="{{product.prod_desc}}" class="form-input" />
        </div>
        <div>
        <label for="price" class="form-label" >Price</label>
        <input name="price" type="text" value="{{product.price}}" class="form-input" />
        </div>
        <div>
        <label for="stock" class="form-label" >Stock</label>
        <input name="stock" type="text" value="{{product.stock}}" class="form-input" />
        </div>
        <div>
        <label for="author_name" class="form-label" >Creator</label>
        <input name="author_name" type="text" value="{{product.author_name}}" class="form-input" />
        </div>
        <div>
        <button type="submit" class="btn">Update Product</button>
        <button type="button" class="delete-prod-btn btn">Delete Product</button>
        </div>
    </form>
</div>


<script src="/javascript/edit-product.js"></script>
<script src="/javascript/delete-product.js"></script>